<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">

        <div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">
                              <!-- show any messages that come back with authentication -->
                                <% if (message.length > 0) { %>
                                  <div class="alert alert-danger"><%= message %></div>
                                <% } %>
                                <h4>Register</h4>
                                <form data-toggle="validator" role="form" action="/users/signup" method="post">
                                    <div class="form-group">
                                        <label for="inputEmail" class="control-label">Email</label>
                                        <input type="email" class="form-control" id="inputEmail" placeholder="Email" data-error="* Not a valid email address" required name="email">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="control-label">Password</label>
                                        <input type="password" data-minlength="6" class="form-control" id="inputPassword" placeholder="Example: Abcd_1234" required>
                                        <div class="help-block">Minimum of 6 characters</div>
                                    </div>
                                    <div class="form-group">
                                      <label for="inputPassword" class="control-label">Password Confirm</label>
                                      <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Passwords don't match" placeholder="Confirm" required name="password">
                                      <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="checkbox">
                                        <label>
										      <input type="checkbox"> Agree the terms and policy
									   </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Register</button>
                                    <div class="register-link m-t-15 text-center">
                                        <p>Already have account ? <a href="/users/login"> Sign in</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
