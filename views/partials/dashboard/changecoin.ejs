<div class="modal" tabindex="-1" role="dialog" id="coin">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Change Currency</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="document.getElementById('coin').style.display='none'">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
            <select id="soflow">
                <option>Select a Currency</option>
                <option>lista de monedas</option>
                <!--document.elementById("soflow").value retorna la opcion seleccionada  posicion 0 es "select a currency"-->
            </select>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary">Change</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="document.getElementById('coin').style.display='none'">Close</button>
      </div>
    </div>
  </div>
</div>